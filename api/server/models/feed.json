{
  "name": "Feed",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "spiti"
    }
  },
  "mixins": {
    "Timestamp": {},
    "SetOwner": {},
    "RelationsValidate": {
      "image": {
        "checkOwner": true
      }
    },
    "CreateWithRelationsLink": {
      "geolocations": {},
      "additionalImages": {
        "checkOwner": true
      }
    },
    "RemoteRouting" : {
      "only": [
        "@find",
        "@findById",
        "@create",
        "updateAttributes",
        "__link__additionalImages",
        "__unlink__additionalImages",
        "__link__geolocations",
        "__unlink__geolocations"
      ]
    }
  },
  "properties": {
    "id": {
      "type": "number",
      "id": true
    },
    "userId": {
      "type": "number",
      "postgresql": {
        "columnName": "userId",
        "dataType": "integer"
      }
    },
    "title": {
      "type": "string",
      "maxLength": 255,
      "postgresql": {
        "dataType": "character varying"
      },
      "description": "post, listing, open_house"
    },
    "description": {
      "type": "string"
    },
    "imageId": {
      "type": "number",
      "min": 1,
      "postgresql": {
        "columnName": "imageId",
        "dataType": "integer"
      }
    },
    "parentId": {
      "type": "number",
      "min": 1,
      "postgresql": {
        "columnName": "parentId",
        "dataType": "integer"
      }
    },
    "displayAddress": {
      "type": "boolean",
      "postgresql": {
        "columnName": "displayAddress"
      }
    },
    "showInBrokerFeed": {
      "type": "boolean",
      "postgresql": {
        "columnName": "showInBrokerFeed"
      }
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "Client",
      "foreignKey": "userId"
    },
    "feedOptions": {
      "type": "hasOne",
      "model": "FeedOptions",
      "foreignKey": "feedId"
    },
    "image": {
      "type": "belongsTo",
      "model": "Attachment",
      "foreignKey": "imageId"
    },
    "additionalImages": {
      "type": "hasMany",
      "model": "Attachment",
      "through": "AttachmentToPost",
      "foreignKey": "feedId",
      "keyThrough": "attachmentId"
    },
    "geolocations": {
      "type": "hasMany",
      "model": "Geolocation",
      "through": "GeolocationToPost",
      "foreignKey": "feedId",
      "keyThrough": "geolocationId"
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "prof",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": []
}
