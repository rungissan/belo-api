{
  "name": "Post",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "spiti"
    }
  },
  "mixins": {
    "Timestamp": {},
    "SetOwner": {},
    "RelationsValidate": {
      "image": {
        "checkOwner": true
      },
      "listing": {
        "checkOwner": true
      }
    },
    "RemoteRouting" : {
      "only": [
        "@find",
        "@findById",
        "@create",
        "updateAttributes",
        "__link__additionalImages",
        "__unlink__additionalImages",
        "__link__geolocations",
        "__unlink__geolocations"
      ]
    }
  },
  "properties": {
    "id": {
      "type": "number",
      "id": true
    },
    "userId": {
      "type": "number",
      "postgresql": {
        "columnName": "user_id",
        "dataType": "integer"
      }
    },
    "title": {
      "type": "string",
      "maxLength": 255,
      "postgresql": {
        "dataType": "character varying"
      }
    },
    "description": {
      "type": "string"
    },
    "imageId": {
      "type": "number",
      "min": 1,
      "postgresql": {
        "columnName": "image_id",
        "dataType": "integer"
      }
    },
    "listingId": {
      "type": "number",
      "min": 1,
      "postgresql": {
        "columnName": "listing_id",
        "dataType": "integer"
      }
    }
  },
  "validations": [],
  "relations": {
    "client": {
      "type": "belongsTo",
      "model": "Client",
      "foreignKey": "userId"
    },
    "image": {
      "type": "belongsTo",
      "model": "Attachment",
      "foreignKey": "imageId"
    },
    "additionalImages": {
      "type": "hasMany",
      "model": "Attachment",
      "through": "AttachmentToPost",
      "foreignKey": "post_id",
      "keyThrough": "attachment_id"
    },
    "geolocations": {
      "type": "hasMany",
      "model": "Geolocation",
      "through": "GeolocationToPost",
      "foreignKey": "user_id",
      "keyThrough": "geolocation_id"
    },
    "listing": {
      "type": "belongsTo",
      "model": "Listing",
      "foreignKey": "listingId"
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "prof",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": []
}
