{
  "name": "Listing",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Timestamp": {}
  },
  "properties": {
    "ownerId": {
      "type": "number",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "zipcodes": {
      "type": "hasMany",
      "model": "Zipcode",
      "through": "ListingToZipcode",
      "foreignKey": "listing_id",
      "keyThrough": "zipcode_id"
    },
    "owner": {
      "type": "belongsTo",
      "model": "Client",
      "foreignKey": "ownerId"
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": ["__create__zipcodes", "__delete__zipcodes", "__destroyById__zipcodes","__update__zipcodes", "__updateById__zipcodes"]
    }
  ],
  "methods": {
    "prototype.findById": {
      "accessScopes": ["profile_read"]
    },
    "findById": {
      "accessScopes": ["profile_read"]
    }
  }
}
