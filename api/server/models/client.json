{
  "name": "Client",
  "base": "User",
  "idInjection": true,
  "options": {
    "emailVerificationRequired": false,
    "validateUpsert": true,
    "restrictResetPasswordTokenScope": true,
    "rejectPasswordChangesViaPatchOrReplace": true,
    "resetPasswordTokenTTL": 900,
    "postgresql": {
      "table": "user"
    }
  },
  "properties": {},
  "validations": [],
  "relations": {
    "verificationTokens": {
      "type": "hasMany",
      "model": "VerificationToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "attachments": {
      "type": "hasMany",
      "model": "Attachment",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "account": {
      "type": "hasOne",
      "model": "Account",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "confirmEmail"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "passwordReset"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "passwordUpdate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "setRole"
    }
  ],
  "methods": {},
  "remoting": {
    "normalizeHttpPath": true
  },
  "mixins": {
    "RemoteRouting" : {
      "only": [
        "@find",
        "@findById",
        "@create",
        "updateAttributes"
      ]
    }
  }
}
