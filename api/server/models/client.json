{
  "name": "Client",
  "base": "User",
  "idInjection": true,
  "options": {
    "emailVerificationRequired": false,
    "validateUpsert": true,
    "restrictResetPasswordTokenScope": true,
    "rejectPasswordChangesViaPatchOrReplace": true,
    "resetPasswordTokenTTL": 900
  },
  "properties": {
    "firstname": {
      "type": "string"
    },
    "lastname": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "description": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "verificationTokens": {
      "type": "hasMany",
      "model": "VerificationToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "confirmEmail"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "passwordReset"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "passwordUpdate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "setRole"
    }
  ],
  "methods": {},
  "remoting": {
    "normalizeHttpPath": true
  }
}
