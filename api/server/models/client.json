{
  "name": "Client",
  "base": "User",
  "idInjection": true,
  "options": {
    "emailVerificationRequired": false,
    "validateUpsert": true,
    "restrictResetPasswordTokenScope": true,
    "rejectPasswordChangesViaPatchOrReplace": true,
    "resetPasswordTokenTTL": 900,
    "postgresql": {
      "table": "user",
      "schema": "spiti"
    }
  },
  "mixins": {
    "RemoteRouting" : {
      "only": [
        "@find",
        "@findById",
        "@create",
        "updateAttributes",
        "__link__geolocations",
        "__unlink__geolocations",
        "__link__favoritePosts",
        "__unlink__favoritePosts",
        "__link__favoriteListings",
        "__unlink__favoriteListings",
        "__get__favoriteListings"
      ]
    }
  },
  "properties": {},
  "validations": [],
  "relations": {
    "verificationTokens": {
      "type": "hasMany",
      "model": "VerificationToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "attachments": {
      "type": "hasMany",
      "model": "Attachment",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "account": {
      "type": "hasOne",
      "model": "Account",
      "foreignKey": "userId"
    },
    "geolocations": {
      "type": "hasMany",
      "model": "Geolocation",
      "through": "GeolocationToUser",
      "foreignKey": "user_id",
      "keyThrough": "geolocation_id"
    },
    "favoritePosts": {
      "type": "hasMany",
      "model": "Post",
      "through": "FavoritePost",
      "foreignKey": "user_id",
      "keyThrough": "post_id"
    },
    "favoriteListings": {
      "type": "hasMany",
      "model": "Listing",
      "through": "FavoriteListing",
      "foreignKey": "user_id",
      "keyThrough": "listing_id"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "confirmEmail"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "passwordReset"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "passwordUpdate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "setRole"
    },
    {
      "principalType": "ROLE",
      "principalId": "prof",
      "permission": "ALLOW",
      "property": "__link__geolocations"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__link__favoritePosts"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__favoritefavoritePosts"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__link__favoriteListings"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__favoriteListings"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__unlink__favoriteListings"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__unlink__favoritePosts"
    }
  ],
  "methods": {},
  "remoting": {
    "normalizeHttpPath": true
  }
}
